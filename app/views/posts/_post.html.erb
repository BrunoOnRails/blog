<div class="card bg-light">
  <div class="card-body">

    <h4><%= link_to post.title, post, class:"link-underline link-underline-opacity-0"%></h4>
    
    <div class="text-muted mb-2">
      <em>Por <%= post.author %> (<%= l post.created_at, format: :long %>)</em>
    </div>
    
    <%= post.body.truncate(150) %>

    <p class="text-muted" > <%= pluralize post.comments.count, 'Comentário' %></p>

    <div class="btn-toolbar" role="toolbar">
      <div class="btn-group me-2" role="group">
        <%=link_to "Ler Artigo", post, class:"btn btn-primary"%>
      </div>
      <div class="btn-group me-2" role="group">
       <%=link_to "Editar", edit_post_path(post), class:"btn btn-secondary"%>
      </div>
      <div class="btn-group me-2" role="group">
       <%=button_to "Excluir", post, method: :delete, data: { turbo_confirm: 'Você tem certeza que deseja excluir?' }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>